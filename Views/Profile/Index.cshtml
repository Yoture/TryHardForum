@model ProfileListModel

<div>
    <div>
        <div>Browse Users</div>
    </div>
    <div>
        <table>
            <thead>
                <tr>
                    <th>Profile Pic</th>
                    <th>Username</th>
                    <th>Member Since</th>
                    <th>E-mail</th>
                    <th>User Rating</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var profile in Model.Profiles)
                {
                    <tr>
                        <!-- Тут должна быть аватарка пользователя -->
                        <td>
                            @if (profile.IsActive)
                            {
                                <span>Active</span>
                            }
                            else
                            {
                                <span>Inactive</span>
                            }
                        </td>
                        <td>@profile.MemberSince</td>
                        <td>@profile.Email</td>
                        <td>
                            <a asp-controller="Profile" asp-action="Details" , asp-route-id="@profile.UserId">
                                @profile.UserName
                            </a>
                        </td>
                        <td>@profile.UserRating</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>